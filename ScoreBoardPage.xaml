<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReflexSmurf.ScoreBoardPage"
             Title="ScoreBoardPage">
    <StackLayout Padding="30" BackgroundColor="Gray">
        <Label Text="Top 10 Scores" FontAttributes="Bold" FontSize="Large" HorizontalOptions="Center" />
        <ListView x:Name="ScoreListView" BackgroundColor="LightGray">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Value}" Detail="{Binding Timestamp, StringFormat='{0:yyyy-MM-dd HH:mm}'}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>